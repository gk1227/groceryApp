<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <h1 class="cover-heading">Add list of Items you want to purchase</h1>
    <form method="POST" action="/form">
        <div class="form-group">
            <label for="name">Item</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter product" required>
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            <input type="number" class="form-control" id="price" name="price" placeholder="Price in Number" required>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Provide description" required>
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
    </form>
    <br>
    <main>
      <div style="border: 2px solid; background-color: darkgray;">
        <h4 style="text-align: center;">Shopping cart for user</h4>
       
        <ul style="margin-right: 20px;">
            <div style="background-color: #efa816">
                <span style="padding: 0 3rem 0 3rem ">Name</span>
                <span style="padding: 0 3rem 0 3rem"> Price</span>
                <span style="padding: 0 3rem 0 3rem"> Description</span>
              </div>
          <% products.forEach(function(product) { %>
            
          <div style="background-color: #c7e0c7; height: 4rem; border-bottom: 1px solid black;">
            <span style="padding: 0 3rem 0 3rem "><%= product.name %></span>
            <span style="padding: 0 3rem 0 3rem"> <%= product.price %></span>
              <span style="padding: 0 3rem 0 3rem"> <%= product.description %></span>
            <div style="margin-left:4rem; display: inline-block; margin-top: 6px;">
            <form action="/delete?name=<%=product.name%>" method="POST">
                <button class="btn-primary" type="submit" id="product" >Delete</button>
                </form>
            </div>
          </div>
          <% }); %> 

          <div style="background-color: white; border-bottom: 1px solid black;">
            <span style="padding: 0 3rem 0 3rem ">Total:</span>
            <span style="padding: 0 3rem 0 3rem"> <%= totalPrice %></span>
            <span style="padding: 0 3rem 0 3rem"></span>
          </div>
        </ul>
      </div>
    

  



</main>

</div>
</body>
<script>
window.onload = function () {
document.getElementById('form').classList.add('active');
};
</script>



  </body>
</html>
